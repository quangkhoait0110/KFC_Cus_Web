
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .h-custom {
        height: calc(100% - 73px);
    }
</style>

<div style="margin-top: 100px">
    <section class="vh-100">
        <div class="container-fluid h-custom" style="margin-top: 150px; margin-bottom: 50px;">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    @using (Html.BeginForm("CheckRegister", "Login", FormMethod.Get))
                    {
                        if (ViewBag.error != null)
                        {
                            <div class="text-danger">@ViewBag.error</div>
                        }
                        @Html.AntiForgeryToken()
                         <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                            <p class="lead fw-normal mb-0 me-3" style="font-weight: 600; color: #333">Đăng kí KFC</p>

                        </div>
                        <div class="divider d-flex align-items-center my-4">
                        </div>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="form3Example3">Email address</label>
                            <input type="email" id="form3Example3" class="form-control form-control-lg" name="emailLogin"
                                   placeholder="Nhập email của bạn" />
                        </div>

                        <div class="form-outline mb-3">
                            <label class="form-label" for="form3Example4">Password</label>
                            <input type="password" id="form3Example4" class="form-control form-control-lg" name="passLogin"
                                   placeholder="Nhập mật khẩu" />
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                        </div>

                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button type="submit" class="btn btn-primary btn-lg"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                Đăng kí
                            </button>
                            <p class="small fw-bold mt-2 pt-1 mb-0">
                                Bạn không có tài khoản? <a href="@Url.Action("Index", "Login")" class="link-danger">Đăng nhập</a>
                            </p>
                        </div>
                    }
                </div>
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="https://static.kfcvietnam.com.vn/images/web/signin/lg/signin.jpg?v=4BJD84"
                         class="img-fluid" alt="Sample image">
                </div>
            </div>
        </div>
    </section>
</div>

