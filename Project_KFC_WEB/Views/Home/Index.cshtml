
@model IEnumerable<Project_KFC_WEB.Models.food>

@{
    ViewBag.Title = "Home Page";
    var foodCategories = ViewBag.foodCategories;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .zoom {
        transition: transform .4s ease;
    }

    .item:hover .zoom {
        transform: scale(1.1);
    }
</style>

@* slice *@
<div style="margin-top: 120px">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Data/images/slice/GaCuonBK.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Data/images/slice/GaDiaTrungHai.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Data/images/slice/GaQueKem.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Data/images/slice/combo-dinner.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Data/images/slice/GiangSinh.png" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

@* Danh mục món ăn *@
<div class="col-md-12">
    <div style="display: flex; align-items: center; column-gap: 20px">
        <span style="font-size: xx-large; font-weight: 700; color: #343a40">Danh mục món ăn</span>
        <div style="width: 75% ; height: 2px; background-color: #6c757d; margin-top: 10px;"></div>
    </div>

    <div class="row">
        @for (int i = 0 ; i < ViewBag.Length; i++)
        {
            <div class="col-lg-3 col-md-12 mb-3">
                <a href="@Url.Action("Menu", "Home", new { index = i})" class="item" style="display: flex; flex-direction: column; height: 280px; box-shadow: 0 1px 6px 0 rgba(0,0,0,.2); border-radius: 4px; background-color: white; cursor:pointer">
                    <div class="bg-image" style="height: 230px; overflow: hidden">
                        <img src="~/Upload/@ViewBag.foodCategories[i].image" style="width: 100%; border-start-start-radius: 4px; border-start-end-radius: 4px;" class="zoom" />
                    </div>
                    <div style="display: flex; height: 30px; padding: 10px;">
                        <span style="color: #343a40; font-weight:700; font-size:18px">@ViewBag.foodCategories[i].name</span>
                        <span style="color: #343a40; font-weight:900; font-size:18px; margin-left:6px; font-size: 24px; margin-top: -6px; "> > </span>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

